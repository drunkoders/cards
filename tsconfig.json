{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "extends": "@snowpack/app-scripts-react/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "isolatedModules": true,
    "paths": { 
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules/*": ["src/components/molecules/*"],
      "@pages/*": ["src/components/pages/*"],
      "@models/*": ["src/models/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "src/*": ["src/*"],
      "public/*": ["public/*"]
    },
    "esModuleInterop": true
  }
}
